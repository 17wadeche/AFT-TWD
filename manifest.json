{
  "manifest_version": 3,
  "permissions": ["tabs"],
  "background": { "service_worker": "bg.js" },
  "name": "TWD Attachment Formatting Tool",
  "description": "Formatting Tool for that highlights, underlines and colors words based on the configuration selected for PDF files.",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": [
        "https://cpic1cs.corp.medtronic.com:8008/*",
        "https://crmstage.medtronic.com/*",
        "https://crm.medtronic.com/*",
        "https://medtronicinctwd--dev.sandbox.lightning.force.com/*",
        "https://*.lightning.force.com/*",
        "https://*.file.force.com/*"
      ],
      "js": ["content.js"],
      "type": "module",
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "host_permissions": [
    "https://cpic1cs.corp.medtronic.com:8008/*",
    "https://crmstage.medtronic.com/*",
    "https://crm.medtronic.com/*",
    "https://medtronicinctwd--dev.sandbox.lightning.force.com/*",
    "https://*.lightning.force.com/*",
    "https://*.file.force.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "viewer.html",
        "viewer.js",
        "pdf.mjs",
        "images/loading-icon.gif",
        "pdf.worker.mjs",
        "pdf_viewer.mjs",
        "pdf_viewer.css",
        "styles.js",
        "bridge.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}